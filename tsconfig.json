{
    "compilerOptions": {
        "declaration": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "preserveConstEnums": true,
        "baseUrl": ".",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "target": "es6",
        "typeRoots": [
            "node_modules/@types",
            "types"
        ],
        "lib": [
            "es7"
        ]
    },
    "include": [
        "packages/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
